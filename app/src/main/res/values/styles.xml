<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BottomNavigationView"
        >
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- Below is the code for AnimatedLoadingIndicator. -->
    <style name="AnimatedLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">BallScaleMultiple</item>
    </style>

    <style name="AnimatedLoadingIndicatorView.Large">
        <item name="minWidth">100dip</item>
        <item name="maxWidth">100dip</item>
        <item name="minHeight">100dip</item>
        <item name="maxHeight">100dip</item>
        <item name="indicatorName">BallScaleMultiple</item>
    </style>

    <style name="AnimatedLoadingIndicatorView.Small">
        <item name="minWidth">24dip</item>
        <item name="maxWidth">24dip</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
        <item name="indicatorName">BallScaleMultiple</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
</resources>